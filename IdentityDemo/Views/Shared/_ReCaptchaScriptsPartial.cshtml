@using Microsoft.Extensions.Options
@inject IOptions<IdentityDemo.Options.ReCaptchaOptions> options
<script src="https://www.google.com/recaptcha/api.js?render=@options.Value.SiteKey"></script>
<script>
    function onClick(e) {
        e.preventDefault();
        grecaptcha.ready(function () {
            grecaptcha.execute('@options.Value.SiteKey', { action: 'submit' }).then(function (token) {
                // Add your logic to submit to your backend server here.
            });
        });
    }
</script>