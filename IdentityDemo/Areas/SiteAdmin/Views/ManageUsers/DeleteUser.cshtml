<h1>تایید حذف کاربر @Model</h1>
<form class="form-group" asp-action="DeleteUserConfirm" asp-controller="ManageUsers">
    <input class="form-control" id="txtConfirm" placeholder="Type in 'CONFIRM' to continue deleting" />
    <input name="username" value="@Model" type="hidden" />
    <button class="btn btn-danger" id="btnDel" disabled>Continue Deleting</button>
</form>
<script>
    $(function () {
        $(txtConfirm).keyup(function () {
            if ($(txtConfirm).val() === "CONFIRM") {
                $(btnDel).removeAttr('disabled')
            } else {
                $(btnDel).attr('disabled','disabled')
            }
        })
    })
</script>